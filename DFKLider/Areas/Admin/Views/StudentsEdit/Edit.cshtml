@model Student
@{
    string strTitle = "Добавить запись";
    ViewBag.Title = strTitle;
}

<form class="form-sample" asp-area="Admin" asp-controller="StudentsEdit" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="col-12 mt-4 grid-margin">
        <div class="card">
            <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Имя</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="Name" />
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Дата рождения</label>
                                <div class="col-sm-9">
                                    <input type="date" class="form-control" placeholder="ДД/ММ/ГГГГ" asp-for="Burthday" />
                                    <span asp-validation-for="Burthday"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Фамилия</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="SurName" />
                                    <span asp-validation-for="SurName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Страховка</label>
                                <div class="col-sm-9">
                                    <input type="date" class="form-control" placeholder="ДД/ММ/ГГГГ" asp-for="InsuranceDate" />
                                    <span asp-validation-for="InsuranceDate"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Отчество</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="MiddleName" />
                                    <span asp-validation-for="MiddleName"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Справка от доктора</label>
                                <div class="col-sm-9">
                                    <input type="date" class="form-control" placeholder="ДД/ММ/ГГГГ" asp-for="DoctorNoteData" />
                                    <span asp-validation-for="DoctorNoteData"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Локация</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="TrainingLocation" />
                                    <span asp-validation-for="TrainingLocation"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Номер группы</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="GroupId" />
                                    <span asp-validation-for="GroupId"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Многодетность</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="ManyChildren" />
                                    <span asp-validation-for="ManyChildren"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Достижения</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="Records" />
                                    <span asp-validation-for="Records"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mr-2">Добавить</button>
            </div>
        </div>
    </div>
</form>