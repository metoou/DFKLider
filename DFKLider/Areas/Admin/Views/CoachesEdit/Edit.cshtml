@model Coach
@{
    string strTitle = "Добавить запись";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="CoachesEdit" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="div-box">
                <label asp-for="SurName"></label>
                <input asp-for="SurName" />
                <span asp-validation-for="SurName"></span>
            </div>
            <div class="div-box">
                <label asp-for="MiddleName"></label>
                <textarea asp-for="MiddleName"></textarea>
                <span asp-validation-for="MiddleName"></span>
            </div>

            <input type="submit" value="Сохранить" />
        </form>
        <form asp-area="Admin" asp-controller="CoachesEdit" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div>
                <select asp-for="Groups">
                    @for (int i = 0; i < @ViewBag.Groups.Count; i++)
                    {
                        <option value="@i" selected>@ViewBag.Groups[i].GroupNumber</option>
                    }
                </select>

            </div>
        </form>       

        @*@Html.DisplayNameFor(model => model.Groups.)*@

    </div>
</div>